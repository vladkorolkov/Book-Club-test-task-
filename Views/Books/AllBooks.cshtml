@model List<BookClub.Models.Book>

<table cellpadding="10">
    <tr>
        <th>Id</th>
        <th>Author</th>
        <th>Name</th>
    </tr>

    @foreach (var book in Model)
    {  
        <tr>
            <td width="70">@book.BookId</td>
            <td>@book.Author</td>
            <td>@book.Name</td>         
        </tr>       
    }

</table>

<div>
        For mark as read please enter book Id:
          <form method="post" asp-controller="Books" asp-action="MarkAsRead">             
                <input type="text" name="id">           
              </form>
    </div>