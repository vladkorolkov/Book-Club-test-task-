@model List<BookClub.Models.Book>

<table cellpadding="10" >
    <tr>
        <th>Id</th>
        <th>Author</th>
        <th>Name</th>
    </tr>

    <td>
    </td>
    </tr>


    @foreach (var book in Model)
    {
        <tr>
            <td width="70">@book.BookId</td>
            <td>@book.Author</td>
            <td>@book.Name</td>
            <td> 
            <form method="get" asp-controller="Books" asp-action="MarkAsRead">
                <input type="submit" value="Mark as read">
            </form>
             </td>
        </tr>
    }

</table>
